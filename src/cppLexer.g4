lexer grammar CPPLexer;

PLUS        : '+' ;
MINUS       : '-' ;
MUL         : '*' ;
DIV         : '/' ;
ASSIGN      : '=' ;
LT          : '<' ;
GT          : '>' ;
LE          : '<=' ;
GE          : '>=' ;
EQ          : '==' ;
NE          : '!=' ;
AND         : '&&' ;
OR          : '||' ;
NOT         : '!' ;
SEMICOLON   : ';' ;
COMMA       : ',' ;
DOT         : '.' ;
COLON       : ':' ;
SCOPE       : '::' ;
LPAREN      : '(' ;
RPAREN      : ')' ;
LBRACE      : '{' ;
RBRACE      : '}' ;
LBRACK      : '[' ;
RBRACK      : ']' ;
QUESTION    : '?' ;
COUT        : 'cout';
CIN         : 'cin';
LEFT_SHIFT  : '<<';
RIGHT_SHIFT : '>>';
INCREMENT       : '++' ;
DECREMENT       : '--' ;
PLUS_ASSIGN     : '+=' ;
MINUS_ASSIGN    : '-=' ;

CLASS       : 'class' ;
PUBLIC      : 'public' ;
PRIVATE     : 'private' ;
PROTECTED   : 'protected' ;
INT         : 'int' ;
DOUBLE      : 'double' ;
CHAR        : 'char' ;
BOOL        : 'bool';
VOID        : 'void' ;
IF          : 'if' ;
ELSE        : 'else' ;
FOR         : 'for' ;
WHILE       : 'while' ;
RETURN      : 'return' ;

ID          : [a-zA-Z_][a-zA-Z_0-9]* ;
NUMBER      : [0-9]+ ('.' [0-9]+)? ;
CHAR_LITERAL: '\'' . '\'' ;
STRING_LITERAL : '"' .*? '"' ;
BOOL_LITERAL: 'true'| 'false';

WS          : [ \t\r\n]+ -> skip ;
COMMENT     : '//' ~[\r\n]* -> skip ;
MULTILINE_COMMENT : '/*' .*? '*/' -> skip ;
